<h1>Sign in</h1>

<div class="row form-horizontal">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

    <div class="form-group center">
      <%= f.label :email, "Email",:class=>"col-sm-2 col-sm-offset-3 control-label"%>
      <div class="col-sm-4">
        <%= f.text_field :email,:class=>"form-control" %>
      </div>
    </div>

    <div class="form-group center">
      <%= f.label :password, "Password",:class=>"col-sm-2 col-sm-offset-3 control-label"%>
      <div class="col-sm-4">
        <%= f.password_field :password,:class=>"form-control" %>
      </div>
    </div>

      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", new_circle_path %></p>
  </div>
</div>
